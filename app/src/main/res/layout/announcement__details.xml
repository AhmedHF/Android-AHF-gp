<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.ahmedhassan.smartcollege.Announcement_Details">

    <TextView
        android:id="@+id/announcemenTitleDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/announcemenDateDetailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#5571f1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/announcemenBodyDetailTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="20sp" />

</LinearLayout>
